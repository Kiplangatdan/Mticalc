<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/seedling"
    android:contentDescription="Credits"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="0dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupimage"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/managing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/text_size_small"
            android:text="@string/managing"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/programming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/text_size_small"
            android:text="Programming"
            android:textColor="#000000"
            android:textSize="24dip" >

        </TextView>

        <TextView
            android:id="@+id/contentdevelopment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/text_size_small"
            android:text="Content Development "
            android:textColor="#000000"
            android:textSize="24dip" >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingLeft="0dp" >

        <ImageView
            android:id="@+id/moi"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:src="@drawable/uoe" />

        <TextView
            android:id="@+id/moitxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Developed in collaboration between:\n"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/moitxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University of Eldoret"
            android:textColor="#000000"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/moitxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Department of Forestry and Wood Science\nDepartment of Computer Science\n and Mathematics"
            android:textColor="#000000"
            android:textSize="16dip" />

        <ImageView
            android:id="@+id/uef"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:src="@drawable/uef" />

        <TextView
            android:id="@+id/ueftxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University of Eastern Finland"
            android:textColor="#000000"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/ueftxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="School of Computing\nSchool of Forest Sciences"
            android:textColor="#000000"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/mofatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:paddingTop="0dp"
            android:text="\n\n\nDeveloped with the support from:"
            android:textColor="#000000"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/mofatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/text_size_small"
            android:text="Ministry for Foreign Affairs of Finland\nRegional Council of North Karelia, Finland\n"
            android:textColor="#000000"
            android:textSize="16dip" />

    </LinearLayout>

    <ImageView
        android:id="@+id/groupimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="20dip"
        android:src="@drawable/pic" 
        android:layout_marginTop="0dip"/>

</RelativeLayout>