<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:contentDescription="Saved Data"
    android:dividerPadding="1dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1" >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fitsSystemWindows="true"
    android:text="Select details by:"
    android:textAlignment="inherit"
    android:textSize="14sp"
    android:textStyle="bold" />

       <Spinner
           android:id="@+id/spinnerlist"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/text_size_small"
           android:animateLayoutChanges="true"
           android:clickable="true"
           android:entries="@array/spinner_entry"
           android:fitsSystemWindows="true"
           android:gravity="left"
           android:labelFor="@integer/No"
           android:paddingLeft="5dp"
           android:spinnerMode="dialog"
           android:splitMotionEvents="true" />

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:animateLayoutChanges="true"
            android:choiceMode="multipleChoiceModal"
            android:clickable="true"
            android:descendantFocusability="afterDescendants"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="true"
            android:fitsSystemWindows="true"
            android:labelFor="@integer/No"
            android:overScrollMode="never"
            android:padding="0dp"
            android:paddingBottom="@dimen/text_size_small"
            android:paddingLeft="@dimen/text_size_small"
            android:paddingRight="@dimen/text_size_small"
            android:paddingTop="@dimen/text_size_small"
            android:splitMotionEvents="true"
            android:textAlignment="inherit"
            android:textFilterEnabled="true"
            android:transcriptMode="normal" />

</LinearLayout>