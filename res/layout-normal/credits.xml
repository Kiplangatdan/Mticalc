<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/seedling"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/groupimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dip"
        android:src="@drawable/group_crop"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupimage"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="5dp">

        <TextView
            android:id="@+id/managing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/managing"
            android:textColor="#000000"
            android:layout_weight="1" 
            android:textSize="11dp" />

        <TextView
            android:id="@+id/programming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:text="Programming"
            android:textColor="#000000"
            android:textSize="11dp" >

        </TextView>

        <TextView
            android:id="@+id/contentdevelopment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content "
            android:textColor="#000000"
            android:textSize="11dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/moi"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:paddingTop="15dp"
            android:src="@drawable/uoe" />
                       
        <TextView
            android:id="@+id/moitxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Developed in collaboration between:\n"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/moitxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="University of Eldoret\nDepartment of Forestry and Wood Science\nDepartment of Computer Science and Mathematics\n"
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold"
            android:typeface="normal" />
        
        <ImageView
            android:id="@+id/uef"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/uef" />
        
         <TextView
             android:id="@+id/ueftxt"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:gravity="center"
             android:text="University of Eastern Finland\nSchool of Computing\nSchool of Forest Sciences\n\n"
             android:textColor="#000000"
             android:textSize="8dp"
             android:textStyle="bold"
             android:typeface="normal" />

        <TextView
            android:id="@+id/mofatxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Developed with the support from:"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/mofatxt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Ministry for Foreign Affairs of Finland\nRegional Council of North Karelia, Finland\n\n"
            android:textColor="#000000"
            android:textSize="8dp"
            android:textStyle="bold"
            android:typeface="normal" />
        
    </LinearLayout>

</RelativeLayout>