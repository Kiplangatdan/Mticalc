<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/small_mainbg"
    android:fitsSystemWindows="true"
    tools:context=".IntroSplashActivity" >
    
    <ImageView
        android:id="@+id/colour_strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/colour_strip" />

     <ImageView
         android:id="@+id/promoter_logo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="false"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="27dp"
         android:adjustViewBounds="true"
         android:duplicateParentState="true"
         android:fitsSystemWindows="true"
         android:scaleType="fitXY"
         android:src="@drawable/logo"
         android:visibility="invisible" />

     <TextView
         android:id="@+id/mticalc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/mticalc2"
         android:layout_alignBottom="@+id/mticalc2"
         android:layout_alignLeft="@+id/promoter_logo"
         android:shadowColor="#2f2310"
         android:shadowDx="0"
         android:shadowDy="5"
         android:shadowRadius="1"
         android:text="Mti"
         android:textColor="#347235"
         android:textSize="70sp"
         android:visibility="invisible" />

     <TextView
         android:id="@+id/mticalc2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/colour_strip"
         android:layout_marginTop="22dp"
         android:layout_toRightOf="@+id/mticalc"
         android:shadowColor="#2f2310"
         android:shadowDx="0"
         android:shadowDy="5"
         android:shadowRadius="1"
         android:text="Calc"
         android:textColor="#347235"
         android:textSize="70sp"
         android:visibility="invisible" />

</RelativeLayout>