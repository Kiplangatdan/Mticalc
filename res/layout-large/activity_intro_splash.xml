<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/small_mainbg"
    android:paddingBottom="50dp"
    tools:context=".IntroSplashActivity" >
    
    <ImageView
        android:id="@+id/colour_strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/colour_strip" />

     <ImageView
         android:id="@+id/promoter_logo"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/mticalc2"
         android:layout_marginTop="279dp"
         android:paddingBottom="30dp"
         android:src="@drawable/large"
         android:visibility="invisible" />

     <TextView
         android:id="@+id/mticalc2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/mticalc"
         android:layout_alignBottom="@+id/mticalc"
         android:layout_alignRight="@+id/colour_strip"
         android:layout_marginRight="34dp"
         android:shadowColor="#2f2310"
         android:shadowDx="0"
         android:shadowDy="5"
         android:shadowRadius="1"
         android:text="Calc"
         android:textColor="#347235"
         android:textSize="120sp"
         android:visibility="invisible" />

     <TextView
         android:id="@+id/mticalc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/colour_strip"
         android:layout_marginTop="118dp"
         android:layout_toLeftOf="@+id/mticalc2"
         android:shadowColor="#2f2310"
         android:shadowDx="0"
         android:shadowDy="5"
         android:shadowRadius="1"
         android:text="Mti"
         android:textColor="#347235"
         android:textSize="120sp"
         android:visibility="invisible" />

</RelativeLayout>